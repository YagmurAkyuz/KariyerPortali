@model KariyerPortali.Admin.ViewModels.FileFormViewModel
@{
    ViewBag.Title = "Create";
}
<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index", "Media")" class="nav-link">Dosyalar</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Yeni Dosya</span>
            </li>
        </ul>
        
    </div>
    <br />
    <div class="row">
        <div class="col-md-12 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered">
                <div class="portlet-title" style="border-bottom-width: 1px;margin-bottom: 10px;">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase ">YENİ DOSYA</span>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            
                           
                            <div class="form-group">
                                @Html.LabelFor(model => model.FileName)
                                @Html.EditorFor(model => model.FileName, new { htmlAttributes = new { @tabindex = "2", @class = "form-control spinner" } })
                                @Html.ValidationMessageFor(model => model.FileName, "", new { @class = "text-danger" })
                            </div>
                            
                            <div class="form-group">
                               
                                    @Html.LabelFor(model => model.Description)
                                    @Html.TextAreaFor(model => model.Description,new { @class = "form-control  "}  )
                                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                              
                             </div>
                           
                            
                            <div class="form-group">
                                <label for="exampleInputFile1">Dosya Girişi</label>
                                <input type="file" id="exampleInputFile1">
                                
                            </div>
                        </div>
                        <div class="form-actions">
                            <button type="submit" class="btn blue">Gönder</button>
                            <button type="button" class="btn default">İptal</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- END SAMPLE FORM PORTLET-->
