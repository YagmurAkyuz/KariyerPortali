
@{
    ViewBag.Title = "Create";
}

<!-- BEGIN SAMPLE FORM PORTLET-->
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            @Html.ActionLink("Adaylar", "Index", "Candidate")
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Adaylar</span>
        </li>
    </ul>
    <div class="page-toolbar">
        <div id="dashboard-report-range" class="pull-right tooltips btn btn-sm" data-container="body" data-placement="bottom" data-original-title="Change dashboard date range">

        </div>
    </div>
</div>
<div class="portlet light bordered">
    <div class="portlet-body form">
        <form role="form">
            <div class="form-body">
                <div class="form-group">
                    <div class="form-group">
                        <label>Kullanıcı Adı</label>
                        <input class="form-control spinner" type="text" placeholder="Kullanıcı Adı" />
                    </div>
                    <div class="form-group">
                        <label>Ad</label>
                        <input class="form-control spinner" type="text" placeholder="Ad" />
                    </div>
                    <div class="form-group">
                        <label>Soyad</label>
                        <input class="form-control spinner" type="text" placeholder="Soyad" />
                    </div>
                    <div class="form-group">
                        <label>E Posta</label>
                        <input class="form-control spinner" type="text" placeholder="E Posta" />
                    </div>
                    <div class="form-group">
                        <label>Telefon</label>
                        <input class="form-control spinner" type="text" placeholder="Telefon" />
                    </div>
                    <div class="form-group">
                        <label>Doğum Tarihi</label>
                        <input class="form-control spinner" type="datetime" />
                    </div>
                    <div class="form-group">
                        <label for="exampleInputFile1">Resim Seçin</label>
                        <input type="file" id="exampleInputFile1">
                        @*<p class="help-block"> some help text here. </p>*@
                    </div>
                    <div class="form-group">
                        <img src="..." width="200" height="200" alt="Kişi Resmi" title="Kişi Resmi" />
                    </div>
                    <label>Durum</label>
                    <div class="form-group">
                        <label class="mt-checkbox mt-checkbox-outline">
                            <input type="checkbox" value="1" name="test" />
                            <span></span>
                        </label>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn blue">Kaydet</button>
                        <button type="button" class="btn default">İptal</button>
                    </div>
        </form>
    </div>
</div>
<!-- END SAMPLE FORM PORTLET-->