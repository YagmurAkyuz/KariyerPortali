@{
    ViewBag.Title = "Tüm Adaylar";
}
<link href="/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" />

<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            @Html.ActionLink("Yazılar", "Index", "Post")
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Tüm Yazılar</span>
        </li>
    </ul>

</div>
<div class="portlet-body">
    <div class="table-toolbar">
        <div class="row">
            <div class="col-md-6">
                <div class="btn-group">
                    <button id="sample_editable_1_new" class="btn sbold green">
                        Yeni Ekle
                        <i class="fa fa-plus"></i>
                    </button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="btn-group pull-right">
                    <button class="btn green  btn-outline dropdown-toggle" data-toggle="dropdown">
                        Araçlar
                        <i class="fa fa-angle-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-print"></i> Yazdır
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-file-pdf-o"></i> PDF olarak Kaydet
                            </a>
                        </li>
                        <li>
                            <a href="javascript:;">
                                <i class="fa fa-file-excel-o"></i> Excel'e Dönüştür
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <table class="table table-striped table-bordered table-hover table-checkable order-column" id="allPostTable">
        <thead>
            <tr>
                <th>
                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                        <input type="checkbox" class="group-checkable" data-set="#allPostTable .checkboxes" />
                        <span></span>
                    </label>
                </th>
                <th> Başlık</th>
                <th> Yazar </th>
                <th> Kategoriler </th>
                <th> Etiketler </th>
                <th> istatistikler </th>
                <th> Yayınlanma Tarihi </th>
                <th> Eylemler </th>
            </tr>
        </thead>
        <tbody>
            <tr class="odd gradeX">
                <td>
                    <label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                        <input type="checkbox" class="checkboxes" value="1" />
                        <span></span>
                    </label>
                </td>
                <td> Fotoğraf </td>
                <td> Kateleyna </td>
                <td> Katy </td>
                <td> Perry </td>
               
                <td>25.10.1984</td>

                <td>29.10.2016</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-xs green dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                            Eylemler
                            <i class="fa fa-angle-down"></i>
                        </button>
                        <ul class="dropdown-menu pull-left" role="menu">
                            <li>
                                <a href="javascript:;">
                                    <i class="icon-note"></i> Düzenle
                                </a>
                            </li>
                            <li>
                                <a href="javascript:;">
                                    <i class="icon-list"></i> Detaylar
                                </a>
                            </li>

                            <li>
                                <a href="javascript:;">
                                    <i class="icon-ban"></i> Sil
                                </a>
                            </li>
                        </ul>
                    </div>
                </td>
            </tr>
           

        </tbody>

    </table>
</div>
@section footer {
    <script src="/assets/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="/assets/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="~/Scripts/pages/candidate-index.js"></script>
    <script>
        $(document).ready(function () {
            initTable1();
        });
    </script>
    }
