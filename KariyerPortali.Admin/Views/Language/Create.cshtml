@model KariyerPortali.Model.Language
@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>

@using (Html.BeginForm("Create", "Language", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br />
    <div class="page-bar">
        <ul class="page-breadcrumb">
            <li>
                <a href="@Url.Action("Index","Language")" class="nav-link ">Tanımlamalar</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Yeni Kayıt</span>
            </li>
        </ul>

    </div>
    <br />
    <div class="row">
        <div class="col-md-12 ">
            <!-- BEGIN SAMPLE FORM PORTLET-->
            <div class="portlet light bordered" style="width:300px;">
                <div class="portlet-title">
                    <h1 class="page-title">
                        Yeni Dil Ekleme
                    </h1>

                </div>

                <div class="portlet-body form">
                    <form role="form">
                        <div class="form-body">
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="form-horizontal">
                                        <hr />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        @Html.HiddenFor(model => model.LanguageId)

                                        <label>Dil Adı</label>
                                        <div class="form-group">
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.LanguageName, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.LanguageName, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <button type="submit" value="Create" class="btn blue">Gönder</button>
                                            <button type="button" class="btn default">İptal</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
}
<!-- END SAMPLE FORM PORTLET-->
